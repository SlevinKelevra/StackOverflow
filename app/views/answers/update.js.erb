$('.errors').remove();
$('.notice').remove();
<% if @answer.errors.any? %>
$('.answers').append('<%= j render 'common/errors', resource: @answer %>');
<% else %>
$('.answers').html('<%= j render @answer %>')
$('.edit-answer-link').click(function(e) {
    e.preventDefault();
    $(this).hide();
    answer_id = $(this).data('answerId');
    $('form#edit-answer-' + answer_id).show();
});
<% end %>